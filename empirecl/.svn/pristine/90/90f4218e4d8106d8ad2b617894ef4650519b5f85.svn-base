
package com.netsol.controllers.utility;

import javax.servlet.http.HttpServletRequest;

import org.apache.log4j.Logger;
import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.bind.annotation.ExceptionHandler;
import org.springframework.web.servlet.ModelAndView;

/*
 * @author  Siddhartha Bhatia
 * @version 1.0
 * @since   2014-07-07  
 * 
 */

@ControllerAdvice
public class ExceptionControllerAdvice {
 
	static final Logger logger = Logger.getLogger(ExceptionControllerAdvice.class);
	
    @ExceptionHandler(Exception.class)
    public ModelAndView exception(HttpServletRequest req, Exception exception) {
    	logger.error(exception.getLocalizedMessage(), exception); 
    	
        ModelAndView mav = new ModelAndView("public-exception");
        mav.addObject("exception", exception);
        mav.addObject("url", req.getRequestURL());
 
        return mav;
    }
    
    
