<%@ taglib prefix="spring" uri="http://www.springframework.org/tags" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>

<div class="login" style="padding: 0px;">
	 <h1>Signatory Details</h1>   
</div>

<c:choose>
	<c:when test="${fn:length(signatoryDetails) eq 0}">
		<div class="datanotfound" >
			 <h1>Data are not fetched in this session.</h1>
		</div>
	</c:when>
    <c:otherwise>
		<table  cellpadding="2" width="100%">
			<tr style="background-color: #A2A2A2;">
			    <th>SNo</th>
			    <th>Director Name</th>
			    <th>DIN</th>
			    <th>Address</th>
			    <th>Designation</th>
			    <th>Date Of Appointment</th>
			    <th>Whether Accused</th>
			</tr>
			<c:forEach items="${signatoryDetails}" var="signatoryDetail" varStatus="count">
			 	<tr <c:if test="${count.index % 2 != 0}">style="background-color: #DBDBDB;"</c:if>>
			    	<td>${count.index+1}</td>
			    	<td>${signatoryDetail.directorName}</td>
			    	<td>${signatoryDetail.din}</td>
			    	<td>${signatoryDetail.address}</td>
			    	<td>${signatoryDetail.designation}</td>
			    	<td><fmt:formatDate type="both" value="${signatoryDetail.date_of_appointment}" /></td>
			    	<td>${signatoryDetail.whether_accused}</td>
			 	</tr>
			 </c:forEach>
		</table> 
    </c:otherwise>
</c:choose>
